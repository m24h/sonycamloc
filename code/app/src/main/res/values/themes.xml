<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- application theme. -->
    <style name="Theme.SonyCamLoc" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textSize">32sp</item>
        <item name="android:buttonStyle">@style/ButtonStyle.Normal</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/ButtonStyle.Dialog</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/ButtonStyle.Dialog</item>
    </style>

    <style name="ButtonStyle.Normal" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:drawableTint">@color/button_drawable</item>
        <item name="android:paddingHorizontal">20dp</item>
    </style>

    <style name="ButtonStyle.Camera" parent="ButtonStyle.Normal">
        <item name="android:paddingVertical">20dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="ButtonStyle.Dialog" parent="ButtonStyle.Normal">
        <item name="android:paddingHorizontal">2dp</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>